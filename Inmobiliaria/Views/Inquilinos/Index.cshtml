@model IEnumerable<Inmobiliaria.Models.Inquilino>

<div class="card shadow-sm p-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Inquilinos</h2>
        <p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-user-plus"></i> Nuevo Inquilino
            </a>
        </p>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>DNI</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Acciones</th>            
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Dni</td>
                    <td>@i.Apellido</td>
                    <td>@i.Nombre</td>
                    <td>@i.Telefono</td>
                    <td>@i.Email</td>
                    <td class="text-nowrap">
                        <a asp-action="Details" asp-route-id="@i.Id" class="btn btn-sm btn-info text-white me-1" title="Ver Detalles">
                            <i class="fa-solid fa-eye"></i> Ver
                        </a>
                        <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-sm btn-success text-white me-1" title="Editar">
                            <i class="fa-solid fa-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-sm btn-danger text-white" title="Dar de Baja">
                            <i class="fa-solid fa-trash-can"></i> Dar de baja
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>