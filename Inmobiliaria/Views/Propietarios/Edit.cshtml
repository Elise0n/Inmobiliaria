@model Inmobiliaria.Models.Propietario

<h2>@(ViewData["Title"] ?? "Propietario")</h2>

<form asp-action="@ViewData["Action"]" method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "DNI" }, { "Name", "Dni" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Nombre" }, { "Name", "Nombre" }, { "Col", "col-md-4" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Apellido" }, { "Name", "Apellido" }, { "Col", "col-md-4" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Teléfono" }, { "Name", "Telefono" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Email" }, { "Name", "Email" }, { "Type", "email" }, { "Col", "col-md-5" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Dirección" }, { "Name", "Direccion" }, { "Col", "col-md-6" } })

    <div class="col-md-2">
        <label class="form-check-label">Activo</label>
        <input asp-for="Activo" type="checkbox" class="form-check-input ms-2" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>
