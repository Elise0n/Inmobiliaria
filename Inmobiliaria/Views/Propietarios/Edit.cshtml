@model Inmobiliaria.Models.Propietario

<h2>Editar Propietario</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-3">
        <label class="form-label">DNI</label>
        <input asp-for="Dni" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Apellido</label>
        <input asp-for="Apellido" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <div class="col-md-5">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Dirección</label>
        <input asp-for="Direccion" class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-check-label">Activo</label>
        <input asp-for="Activo" type="checkbox" class="form-check-input ms-2" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
