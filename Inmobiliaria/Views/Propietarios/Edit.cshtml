@model Inmobiliaria.Models.Propietario

<h2>Editar Propietario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />              <!-- Id oculto -->
    <div><label>DNI</label><input asp-for="Dni" /></div>
    <div><label>Nombre</label><input asp-for="Nombre" /></div>
    <div><label>Apellido</label><input asp-for="Apellido" /></div>
    <div><label>Teléfono</label><input asp-for="Telefono" /></div>
    <div><label>Email</label><input asp-for="Email" /></div>
    <div><label>Dirección</label><input asp-for="Direccion" /></div>
    <div><label>Activo</label><input asp-for="Activo" type="checkbox" /></div>
    <button type="submit">Guardar</button>
    <a asp-action="Index">Volver</a>
</form>
