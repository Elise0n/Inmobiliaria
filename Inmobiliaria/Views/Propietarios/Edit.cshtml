@model Inmobiliaria.Models.Propietario
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inject IModelExpressionProvider ModelExpressionProvider

<h2>@(ViewData["Title"] ?? "Propietario")</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <div asp-validation-summary="All" class="alert alert-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.Dni))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "DNI" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.Nombre))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Nombre" }, { "Col", "col-md-4" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.Apellido))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Apellido" }, { "Col", "col-md-4" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.Telefono))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Teléfono" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.Email))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Email" }, { "Type", "email" }, { "Col", "col-md-5" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.Direccion))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Dirección" }, { "Col", "col-md-6" } })' />

    <div class="col-md-2">
        <label class="form-check-label">Activo</label>
        <input asp-for="Activo" type="checkbox" class="form-check-input ms-2" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>
