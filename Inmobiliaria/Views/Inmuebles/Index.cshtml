@model IEnumerable<Inmobiliaria.Models.Inmueble>

<h2>Inmuebles</h2>
<p><a asp-action="Create" class="btn btn-primary">Nuevo Inmueble</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Dirección</th>
            <th>Tipo</th>
            <th>Precio</th>
            <th>Situación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Direccion</td>
                <td>@i.Tipo</td>
                <td>@i.PrecioBase?.ToString("C")</td>
                <td>@i.Situacion</td>
                <td>
                    <a asp-action="Details" asp-route-id="@i.Id">Ver</a> |
                    <a asp-action="Edit" asp-route-id="@i.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@i.Id">Dar de baja</a>
                </td>
            </tr>
        }
    </tbody>
</table>
