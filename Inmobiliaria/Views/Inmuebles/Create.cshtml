@model Inmobiliaria.Models.Inmueble

<h2>@(ViewData["Title"] ?? "Inmueble")</h2>

<form asp-action="@ViewData["Action"]" method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Dirección" }, { "Name", "Direccion" }, { "Col", "col-md-6" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Tipo" }, { "Name", "Tipo" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Ambientes" }, { "Name", "Ambientes" }, { "Type", "number" }, { "Col", "col-md-2" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Superficie (m²)" }, { "Name", "SuperficieM2" }, { "Type", "number" }, { "Col", "col-md-2" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Precio Base" }, { "Name", "PrecioBase" }, { "Type", "number" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Situación" }, { "Name", "Situacion" }, { "Col", "col-md-3" } })

    <div class="col-md-2">
        <label class="form-check-label">Activo</label>
        <input asp-for="Activo" type="checkbox" class="form-check-input ms-2" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>
