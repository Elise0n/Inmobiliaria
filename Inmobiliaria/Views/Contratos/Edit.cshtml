@model Inmobiliaria.Models.Contrato

<h2>@(ViewData["Title"] ?? "Contrato")</h2>

<form asp-action="@ViewData["Action"]" method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "InmuebleId" }, { "Name", "InmuebleId" }, { "Type", "number" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "InquilinoId" }, { "Name", "InquilinoId" }, { "Type", "number" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Fecha Inicio" }, { "Name", "FechaInicio" }, { "Type", "date" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Fecha Fin" }, { "Name", "FechaFin" }, { "Type", "date" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Monto Mensual" }, { "Name", "MontoMensual" }, { "Type", "number" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Depósito" }, { "Name", "Deposito" }, { "Type", "number" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Estado" }, { "Name", "Estado" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Multa %" }, { "Name", "MultaPct" }, { "Type", "number" }, { "Col", "col-md-2" } })

    <div class="col-md-12">
        <label class="form-label">Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>

    <div class="col-md-2">
        <label class="form-check-label">Activo</label>
        <input asp-for="Activo" type="checkbox" class="form-check-input ms-2" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>
