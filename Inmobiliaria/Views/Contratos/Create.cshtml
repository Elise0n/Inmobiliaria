@model Inmobiliaria.Models.Contrato
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inject IModelExpressionProvider ModelExpressionProvider

<h2>@(ViewData["Title"] ?? "Contrato")</h2>

<form asp-action="Create" method="post" class="row g-3">
    <div asp-validation-summary="All" class="alert alert-danger"></div>
    
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.InmuebleId))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "InmuebleId" }, { "Type", "number" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.InquilinoId))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "InquilinoId" }, { "Type", "number" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.FechaInicio))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Fecha Inicio" }, { "Type", "date" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.FechaFin))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Fecha Fin" }, { "Type", "date" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.MontoMensual))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Monto Mensual" }, { "Type", "number" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.Deposito))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Depósito" }, { "Type", "number" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.Estado))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Estado" }, { "Col", "col-md-3" } })' />
    <partial name="_FormInput" model="@(ModelExpressionProvider.CreateModelExpression(ViewData, m => m.MultaPct))" view-data='@(new ViewDataDictionary(ViewData) { { "Label", "Multa %" }, { "Type", "number" }, { "Col", "col-md-2" } })' />

    <div class="col-md-12">
        <label class="form-label">Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>

    <div class="col-md-2">
        <label class="form-check-label">Activo</label>
        <input asp-for="Activo" type="checkbox" class="form-check-input ms-2" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>
