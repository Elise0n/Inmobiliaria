@model IEnumerable<Inmobiliaria.Models.Contrato>

<h2>Contratos</h2>
<p><a asp-action="Create" class="btn btn-primary">Nuevo Contrato</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>InmuebleId</th>
            <th>InquilinoId</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.InmuebleId</td>
                <td>@c.InquilinoId</td>
                <td>@c.FechaInicio.ToShortDateString()</td>
                <td>@c.FechaFin.ToShortDateString()</td>
                <td>@c.MontoMensual.ToString("C")</td>
                <td>@c.Estado</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Id">Ver</a> |
                    <a asp-action="Edit" asp-route-id="@c.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@c.Id">Dar de baja</a>
                </td>
            </tr>
        }
    </tbody>
</table>
