@model Inmobiliaria.Models.Pago

<h2>@(ViewData["Title"] ?? "Pago")</h2>

<form asp-action="@ViewData["Action"]" method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ContratoId" />

    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Nro Cuota" }, { "Name", "NroCuota" }, { "Type", "number" }, { "Col", "col-md-2" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Periodo (YYYY-MM)" }, { "Name", "Periodo" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Fecha Pago" }, { "Name", "FechaPago" }, { "Type", "date" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Importe" }, { "Name", "Importe" }, { "Type", "number" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Recargo" }, { "Name", "Recargo" }, { "Type", "number" }, { "Col", "col-md-3" } })
    @await Html.PartialAsync("_FormInput", Model, new ViewDataDictionary(ViewData) { { "Label", "Estado" }, { "Name", "Estado" }, { "Col", "col-md-3" } })

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
    </div>
</form>
