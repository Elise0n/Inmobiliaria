@model Inmobiliaria.Models.Pago
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inject IModelExpressionProvider ModelExpressionProvider

<h2>Anular Pago</h2>
<p>¿Confirmás anular el pago de la cuota <strong>@Model.NroCuota</strong> (Periodo: @Model.Periodo)?</p>

<form asp-action="Delete" method="post">
    <div asp-validation-summary="All" class="alert alert-danger"></div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmar</button>
    <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Cancelar</a>
</form>
