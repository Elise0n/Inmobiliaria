@model IEnumerable<Inmobiliaria.Models.Pago>

<div class="card shadow-sm p-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Pagos</h2>
        <p>
            <a asp-action="Create" asp-route-contratoId="@ViewBag.ContratoId" class="btn btn-primary">
                <i class="fa-solid fa-cash-register"></i> Nuevo Pago
            </a>
        </p>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nro Cuota</th>
                <th>Periodo</th>
                <th>Fecha Pago</th>
                <th>Importe</th>
                <th>Recargo</th>
                <th>Estado</th>
                <th>Acciones</th>            
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.NroCuota</td>
                    <td>@p.Periodo</td>
                    <td>@p.FechaPago?.ToShortDateString()</td>
                    <td>@p.Importe.ToString("C")</td>
                    <td>@p.Recargo.ToString("C")</td>
                    <td>@p.Estado</td>
                    <td class="text-nowrap">
                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info text-white me-1" title="Ver Detalles">
                            <i class="fa-solid fa-eye"></i> Ver
                        </a>
                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-success text-white me-1" title="Editar Pago">
                            <i class="fa-solid fa-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger text-white" title="Anular Pago">
                            <i class="fa-solid fa-ban"></i> Anular
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>