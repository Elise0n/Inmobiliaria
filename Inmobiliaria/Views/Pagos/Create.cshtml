@model Inmobiliaria.Models.Pago

<h2>Nuevo Pago</h2>

<form asp-action="Create" method="post" class="row g-3">
    <input type="hidden" asp-for="ContratoId" />

    <div class="col-md-3">
        <label class="form-label">Nro Cuota</label>
        <input asp-for="NroCuota" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Periodo (YYYY-MM)</label>
        <input asp-for="Periodo" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Fecha Pago</label>
        <input asp-for="FechaPago" type="date" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Importe</label>
        <input asp-for="Importe" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Recargo</label>
        <input asp-for="Recargo" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Estado</label>
        <input asp-for="Estado" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
    </div>
</form>
